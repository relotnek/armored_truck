<table class="table table-bordered table-striped">
<tbody>
  <% @keys.each do |key| %>
<tr>
  <td class="col-sm-2"><%= link_to(key.name, key) %></td>
  <td class="col-sm-2"><%= button_to "Generate", key_generate_path(:key => key), :class => "btn btn-sm btn-success", :method => :post , :data => { :confirm => "Generating new keys will break the ability to decrypt any files previously created with this key, are you sure you want to create new keys?"} %>
  </td>
  <td class="col-sm-2"><%= key.public_key.inspect %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
